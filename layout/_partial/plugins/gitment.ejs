<% if (theme.gitment) {%>
	<% if(config.localhost){ %>
		<!--Gitment:https://github.com/imsun/gitment or https://imsun.net/posts/gitment-introduction/-->
		<div id="container"></div>
		<link rel="stylesheet" href="https://imsun.github.io/gitment/style/default.css">
		<script src="https://imsun.github.io/gitment/dist/gitment.browser.js"></script>
		<script>
		var gitment = new Gitment({
		  id: '<%= page.title %>', // 可选。默认为 location.href
		  owner: '<%= theme.gitment.owner %>',
		  repo: '<%= theme.gitment.repo %>',
		  oauth: {
			client_id: '<%= theme.gitment.local_id %>',  
			client_secret: '<%= theme.gitment.local_secret %>'
		  },
		})
		gitment.render('container')
		</script>
	<% } else {%>
		
		<% if (config.deploy.repo.coding) {%>
			
		<% } else if(config.deploy.repo.github) { %>
			<!--Gitment:https://github.com/imsun/gitment or https://imsun.net/posts/gitment-introduction/-->
			<div id="container"></div>
			<link rel="stylesheet" href="https://imsun.github.io/gitment/style/default.css">
			<script src="https://imsun.github.io/gitment/dist/gitment.browser.js"></script>
			<script>
			var gitment = new Gitment({
			  id: '<%= page.title %>', // 可选。默认为 location.href
			  owner: '<%= theme.gitment.owner %>',
			  repo: '<%= theme.gitment.repo %>',
			  oauth: {
				client_id: '<%= theme.gitment.client_id %>',  
				client_secret: '<%= theme.gitment.client_secret %>'
			  },
			})
			gitment.render('container')
			</script>
		<% } %>
	<% } %>

<% } %>

